<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".New_pass">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sign_up_activity"
        android:layout_width="match_parent"
        android:background="@color/purple_700"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="New Pass"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


<!--======================First Box   ====================================================-->
        <RelativeLayout
            android:id="@+id/box1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/location_text"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:background="@drawable/custom_select_btn"
        android:padding="20dp"
        android:text="GOREGAON-SANTACRUZ" />

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/arrow_drop_down"
         android:layout_marginTop="17dp"
         android:layout_alignRight="@+id/location_text"/>
        </RelativeLayout>



<!--================ Second Box ================================================-->

        <RelativeLayout
            android:id="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/box1"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/location_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_select_btn"
                android:padding="20dp"
                android:text="1 month" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_drop_down"
                android:layout_marginTop="17dp"
                android:layout_alignRight="@+id/location_text2"/>
        </RelativeLayout>


        <!--================ Third Box ================================================-->


        <RelativeLayout
            android:id="@+id/box3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/box2"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/location_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_select_btn"
                android:padding="20dp"
                android:text="DEBIT CARD" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_drop_down"
                android:layout_marginTop="17dp"
                android:layout_alignRight="@+id/location_text3"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/change_payment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/box3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:textColor="@color/purple_700"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="CHANGE PAYMENT METHOD" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="22dp"
            android:layout_below="@+id/change_payment_txt">

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL PRICE:"

                android:textColor="@color/grey_dark"
                android:textStyle="bold"
                android:textSize="15dp"/>


   <RelativeLayout
    android:id="@+id/price_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       android:gravity="center_vertical">

       <ImageView
           android:id="@+id/rupee_logo"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_marginEnd="10dp"
           android:layout_toStartOf="@+id/rupee"
           android:src="@drawable/rupee_icon" />

       <TextView
           android:id="@+id/rupee"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:layout_marginTop="2dp"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textSize="17dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:text="100" />
   </RelativeLayout>

           <RelativeLayout
               android:layout_below="@+id/price_layout"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:text="PROCEED TO PAYMENT"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/custom_payment_btn"/>

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/arrow_forward"
                   android:layout_margin="15.9dp"
                   android:layout_alignParentRight="true"/>
           </RelativeLayout>

        </RelativeLayout>





    </RelativeLayout>






</LinearLayout>